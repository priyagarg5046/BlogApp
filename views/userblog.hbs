      <h1 class="text-3xl font-bold mb-4">{{blog.title}}</h1>

      <img src="{{blog.image}}" alt="Blog Post Image" class="mb-4 rounded-md">

      
      <p class="text-gray-700 leading-relaxed">
       {{blog.body}}
      </p>
    </article>

  </div>

</body>
</html>